body
  header
    &.app-header
      .user-nav
        a[href="/signup"]
          display none

form
  .form-group
    label
      display block
    p
      &.help-block
        a
          margin 0 4px
          display inline-block
    ul
      padding 0
      list-style none

.title-page
  text-align center
  margin-bottom 30px
  margin-top 30px
  .circle
    background #bdc3c7
    color white
    width 80px
    height 80px
    overflow hidden
    display inline-block
    border-radius 100px

  i
    font-size 30px
    line-height 80px
    color #7f8c8d
