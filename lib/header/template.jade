header.app-header(headroom)
  #header-container
    h1#logo
      a(href='/')
        img(src=config['logo']).logo
        span.logo-link=t('header.logo')

    .user-nav.btn-group
      a.login.pull-right(href='/signin')
        i.icon-signin
        span= t('header.signin')
      a.login.pull-right(href='/signup')
        i.icon-user
        span= t('header.signup')